{
    "name": "live-chat-overlay",
    "version": "2.3.0",
    "description": "Web Extension for Overlay Live Chat on Youtube",
    "main": "dist/content-script.js",
    "repository": "git@github.com:thwonghin/live-chat-overlay.git",
    "author": "Hin Wong <thwong.henry@gmail.com>",
    "license": "MIT",
    "engines": {
        "node": ">=14.14.0"
    },
    "scripts": {
        "test:unit": "jest tests/unit",
        "lint": "eslint --quiet --ext .ts src tests",
        "lint:test": "eslint --quiet --ext .ts tests",
        "lint:fix": "eslint src --ext ts,tsx --quiet --fix && stylelint src/**/*.scss --fix",
        "clean": "rm -rf dist .storybook/dist webpack/dist webpack/tsconfig.tsbuildinfo",
        "build": "tsc -p webpack && webpack --config webpack/dist/webpack.config.js",
        "build:prod": "yarn build --env production",
        "build:release": "yarn build --env release",
        "start": "yarn build --env development --watch",
        "format": "prettier src/**/*.ts src/**/*.tsx --write",
        "version:set": "dot-json dist/manifest.json version",
        "storybook": "tsc -p webpack && tsc -p .storybook && cp .storybook/src/preview-head.html .storybook/dist/ && start-storybook -c .storybook/dist/ --no-dll",
        "postinstall": "patch-package"
    },
    "devDependencies": {
        "@babel/core": "^7.12.3",
        "@babel/plugin-proposal-class-properties": "^7.12.1",
        "@babel/preset-env": "^7.12.1",
        "@babel/preset-react": "^7.12.1",
        "@babel/preset-typescript": "^7.12.1",
        "@babel/runtime": "^7.12.1",
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@storybook/react": "^6.0.27",
        "@types/classnames": "^2.2.10",
        "@types/copy-webpack-plugin": "^6.0.0",
        "@types/cssnano": "^4.0.0",
        "@types/jest": "^26.0.15",
        "@types/lodash-es": "^4.17.3",
        "@types/mini-css-extract-plugin": "^1.0.0",
        "@types/node": "^14.14.2",
        "@types/react": "^16.9.53",
        "@types/react-dom": "^16.9.8",
        "@types/react-redux": "^7.1.9",
        "@types/stylelint": "^9.10.1",
        "@types/terser-webpack-plugin": "^5.0.0",
        "@typescript-eslint/eslint-plugin": "^4.5.0",
        "babel-loader": "^8.1.0",
        "chrome-webstore-upload-cli": "^1.2.0",
        "copy-webpack-plugin": "^6.2.1",
        "css-loader": "^5.0.0",
        "cssnano": "^4.1.10",
        "dot-json": "^1.2.1",
        "eslint": "^7.12.0",
        "eslint-config-airbnb-typescript": "^12.0.0",
        "eslint-config-prettier": "^6.14.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^24.1.0",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.21.5",
        "eslint-plugin-react-hooks": "^4.2.0",
        "fork-ts-checker-webpack-plugin": "^5.2.0",
        "husky": "^4.3.0",
        "jest": "^26.6.1",
        "mini-css-extract-plugin": "^1.2.0",
        "postcss-loader": "^4.0.4",
        "postcss-preset-env": "^6.7.0",
        "prettier": "^2.1.2",
        "sass": "^1.27.0",
        "sass-loader": "^10.0.4",
        "style-loader": "^2.0.0",
        "stylelint": "^13.7.2",
        "stylelint-config-css-modules": "^2.2.0",
        "stylelint-config-rational-order": "^0.1.2",
        "stylelint-config-recommended-scss": "^4.2.0",
        "stylelint-config-sass-guidelines": "^7.1.0",
        "stylelint-order": "^4.1.0",
        "stylelint-scss": "^3.18.0",
        "terser-webpack-plugin": "^5.0.1",
        "ts-jest": "^26.4.2",
        "tsconfig-paths-webpack-plugin": "^3.3.0",
        "typed-css-modules-webpack-plugin": "^0.2.0",
        "typescript": "^4.0.3",
        "webpack": "^5.2.0",
        "webpack-cli": "^4.1.0"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not op_mini all"
    ],
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.32",
        "@fortawesome/free-solid-svg-icons": "^5.15.1",
        "@fortawesome/react-fontawesome": "^0.1.11",
        "@material-ui/core": "^4.11.0",
        "@reduxjs/toolkit": "^1.4.0",
        "classnames": "^2.2.6",
        "core-js": "3",
        "formik": "^2.2.1",
        "jss": "^10.4.0",
        "lodash-es": "^4.17.15",
        "patch-package": "^6.2.2",
        "postinstall-postinstall": "^2.1.0",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-redux": "^7.2.1",
        "regenerator-runtime": "^0.13.7",
        "use-debounce": "^5.0.1",
