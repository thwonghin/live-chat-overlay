{
    "name": "live-chat-overlay",
    "version": "2.10.1",
    "description": "Web Extension for Overlay Live Chat on Youtube",
    "main": "dist/content-script.js",
    "repository": "git@github.com:thwonghin/live-chat-overlay.git",
    "author": "Hin Wong <thwong.henry@gmail.com>",
    "license": "MIT",
    "engines": {
        "node": ">=14.16.1"
    },
    "scripts": {
        "test:unit": "tsc -p tests && jest tests/unit",
        "lint": "yarn lint:src && yarn lint:test && yarn lint:style",
        "lint:script": "eslint --ext ts,tsx",
        "lint:src": "yarn lint:script src",
        "lint:test": "yarn lint:script tests",
        "lint:style": "stylelint src/**/*.scss",
        "lint:fix": "yarn lint:script --fix && yarn lint:style --fix",
        "clean": "rm -rf dist .storybook/dist webpack/dist webpack/tsconfig.tsbuildinfo src/**/*.scss.d.ts",
        "build": "tsc -p webpack && webpack --config webpack/dist/webpack.config.js",
        "build:prod": "yarn build --env production",
        "build:release": "yarn build --env release",
        "start": "yarn build --env development --watch",
        "postversion": "npx conventional-changelog-cli -p live-chat-overlay -i CHANGELOG.md -s && git add CHANGELOG.md",
        "version:set": "dot-json dist/manifest.json version",
        "storybook": "tsc -p webpack && tsc -p .storybook && cp .storybook/src/preview-head.html .storybook/dist/ && start-storybook -c .storybook/dist/",
        "storybook:build": "tsc -p webpack && tsc -p .storybook && cp .storybook/src/preview-head.html .storybook/dist/ && build-storybook -c .storybook/dist/ --quiet",
        "prepublishOnly": "pinst --disable",
        "postpublish": "pinst --enable",
        "postinstall": "patch-package"
    },
    "devDependencies": {
        "@commitlint/cli": "^13.1.0",
        "@commitlint/config-conventional": "^13.1.0",
        "@storybook/builder-webpack5": "^6.2.9",
        "@storybook/react": "^6.2.9",
        "@swc/core": "1.2.84",
        "@swc/jest": "^0.2.2",
        "@types/classnames": "^2.3.1",
        "@types/copy-webpack-plugin": "^8.0.0",
        "@types/cssnano": "^4.0.0",
        "@types/jest": "^27.0.1",
        "@types/json-schema": "^7.0.7",
        "@types/lodash-es": "^4.17.4",
        "@types/mini-css-extract-plugin": "^2.2.0",
        "@types/node": "^14.14.44",
        "@types/react": "^17.0.5",
        "@types/react-dom": "^17.0.3",
        "@types/react-redux": "^7.1.16",
        "@types/stylelint": "^13.13.2",
        "@types/tapable": "^2.2.2",
        "@typescript-eslint/eslint-plugin": "^4.30.0",
        "@typescript-eslint/parser": "^4.30.0",
        "browserslist": "^4.16.6",
        "copy-webpack-plugin": "^9.0.1",
        "css-loader": "^6.2.0",
        "cssnano": "^5.0.2",
        "dot-json": "^1.2.2",
        "eslint": "^7.25.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-config-xo": "^0.38.0",
        "eslint-config-xo-react": "^0.25.0",
        "eslint-config-xo-typescript": "^0.44.0",
        "eslint-plugin-jest": "^24.4.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.25.1",
        "eslint-plugin-react-hooks": "^4.2.0",
        "fork-ts-checker-webpack-plugin": "^6.3.3",
        "husky": "7.0.2",
        "jest": "^27.1.0",
        "lodash": "^4.17.21",
        "mini-css-extract-plugin": "^2.2.2",
        "pinst": "^2.1.6",
        "postcss": "^8.2.14",
        "postcss-html": "^0.36.0",
        "postcss-loader": "^6.1.1",
        "postcss-preset-env": "^6.7.0",
        "postcss-syntax": "^0.36.2",
        "prettier": "^2.3.2",
        "sass": "^1.32.12",
        "sass-loader": "^12.1.0",
        "style-loader": "^3.2.1",
        "stylelint": "^13.13.1",
        "stylelint-config-css-modules": "^2.2.0",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-config-rational-order": "^0.1.2",
        "stylelint-config-xo-scss": "^0.14.0",
        "stylelint-order": "^4.1.0",
        "stylelint-prettier": "^1.2.0",
        "stylelint-scss": "^3.19.0",
        "swc-loader": "^0.1.14",
        "tsconfig-paths-webpack-plugin": "^3.5.1",
        "typed-css-modules-webpack-plugin": "^0.2.0",
