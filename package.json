{
    "name": "live-chat-overlay",
    "version": "2.13.1",
    "description": "Web Extension for Overlay Live Chat on Youtube",
    "main": "dist/content-script.js",
    "repository": "git@github.com:thwonghin/live-chat-overlay.git",
    "author": "Hin Wong <thwong.henry@gmail.com>",
    "license": "MIT",
    "engines": {
        "node": ">=18.16.0"
    },
    "scripts": {
        "test:unit": "tsc -p tests && jest tests/unit",
        "lint": "pnpm lint:src && pnpm lint:test && pnpm lint:style",
        "lint:script": "eslint --ext ts,tsx",
        "lint:src": "pnpm lint:script src webpack/src",
        "lint:test": "pnpm lint:script tests",
        "lint:style": "stylelint './src/**/*.tsx'",
        "lint:fix": "pnpm lint:src --fix && pnpm lint:test --fix",
        "clean": "rm -rf dist .storybook/dist webpack/dist webpack/tsconfig.tsbuildinfo",
        "build": "tsc -p webpack && webpack --config webpack/dist/webpack.config.js",
        "build:prod": "pnpm build --env production",
        "start": "pnpm build --env development --watch",
        "postversion": "npx conventional-changelog-cli -p live-chat-overlay -i CHANGELOG.md -s && git add CHANGELOG.md",
        "version:set": "dot-json dist/manifest.json version",
        "storybook": "tsc -p webpack && tsc -p .storybook && cp .storybook/src/preview-head.html .storybook/dist/ && start-storybook -c .storybook/dist/",
        "storybook:build": "tsc -p webpack && tsc -p .storybook && cp .storybook/src/preview-head.html .storybook/dist/ && build-storybook -c .storybook/dist/ --quiet"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.6.5",
        "@commitlint/config-conventional": "^17.6.5",
        "@storybook/builder-webpack5": "^6.3.8",
        "@storybook/manager-webpack5": "^6.3.8",
        "@storybook/react": "^6.3.8",
        "@swc/core": "^1.3.61",
        "@swc/jest": "^0.2.26",
        "@types/jest": "^29.5.2",
        "@types/lodash-es": "^4.17.7",
        "@types/node": "^18.16.16",
        "@types/react": "^18.2.7",
        "@types/react-dom": "^18.2.4",
        "@types/react-redux": "^7.1.25",
        "@types/styled-components": "^5.1.26",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "copy-webpack-plugin": "^11.0.0",
        "dot-json": "^1.3.0",
        "eslint": "^8.41.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-config-xo": "^0.43.1",
        "eslint-config-xo-react": "^0.27.0",
        "eslint-config-xo-typescript": "^0.57.0",
        "eslint-import-resolver-typescript": "^3.5.5",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jest": "^27.2.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "fork-ts-checker-webpack-plugin": "^8.0.0",
        "husky": "8.0.3",
        "jest": "^29.5.0",
        "lodash": "^4.17.21",
        "postcss-styled-syntax": "^0.4.0",
        "prettier": "^2.8.8",
        "stylelint": "^15.6.2",
        "stylelint-config-recess-order": "^4.0.0",
        "stylelint-config-recommended": "^12.0.0",
        "stylelint-order": "^6.0.3",
        "stylelint-prettier": "^3.0.0",
        "swc-loader": "^0.2.3",
        "tsconfig-paths-webpack-plugin": "^4.0.1",
        "typescript": "^5.0.4",
        "webpack": "^5.85.0",
        "webpack-cli": "^5.1.1"
    },
    "browserslist": [
        "Chrome >= 88"
    ],
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^6.4.0",
        "@fortawesome/free-solid-svg-icons": "^6.4.0",
        "@fortawesome/react-fontawesome": "^0.2.0",
        "@mui/material": "^5.13.3",
        "@mui/styled-engine-sc": "^5.12.0",
        "@reduxjs/toolkit": "^1.9.5",
        "core-js": "3.30.2",
        "formik": "^2.4.1",
        "lodash-es": "^4.17.21",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-redux": "^8.0.7",
        "redux": "^4.2.1",
        "styled-components": "^5.3.11",
        "use-debounce": "^9.0.4",
        "webextension-polyfill-ts": "^0.26.0"
    },
    "packageManager": "pnpm@8.6.0",
    "resolutions": {
        "trim": "^1.0.1",
        "glob-parent": "^5.1.2",
        "@mui/styled-engine": "npm:@mui/styled-engine-sc@latest",
        "@types/eslint": "7",
        "@types/webpack": "5"
    },
    "volta": {
        "node": "18.16.0"
    }
}
