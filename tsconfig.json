{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "downlevelIteration": true,
        "strict": true,
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "noUncheckedIndexedAccess": true,
        "jsx": "react-jsx",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["./src"]
}
